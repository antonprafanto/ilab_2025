# iLab UNMUL - Production Environment Configuration
# Copy this file to .env and configure for your production server

APP_NAME="iLab UNMUL"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=Asia/Makassar

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Production Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=production_database_name
DB_USERNAME=production_db_user
DB_PASSWORD=strong_production_password

# Session & Cache (use database for production reliability)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Redis (optional, uncomment if using Redis)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Email Configuration for Production
# Option 1: Gmail SMTP (recommended for testing)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-gmail@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Option 2: cPanel Email (recommended for production)
# MAIL_MAILER=smtp
# MAIL_HOST=mail.yourdomain.com
# MAIL_PORT=587
# MAIL_USERNAME=noreply@yourdomain.com
# MAIL_PASSWORD=your-cpanel-email-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# Option 3: SendGrid (for high volume emails)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# AWS (optional, if using S3 for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Asset URL (for CDN or different domain)
VITE_APP_NAME="${APP_NAME}"
# ASSET_URL=https://cdn.yourdomain.com

# Security Headers (optional)
# SECURE_COOKIES=true
# SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
